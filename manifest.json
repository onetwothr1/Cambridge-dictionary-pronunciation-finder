{
    "manifest_version": 3,
    "name": "Cambridge Pronunciation Finder",
    "version": "1.5",
    "description": "Select a word to get its UK and US pronunciation from the Cambridge Dictionary.",
    "permissions": [
      "contextMenus",
      "notifications",
      "offscreen"
    ],
    "host_permissions": [
      "https://dictionary.cambridge.org/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
          "content.js"
        ]
      }
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "icons/icon16.png",
          "icons/icon48.png",
          "icons/icon128.png"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }